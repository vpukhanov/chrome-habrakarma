{
  "name": "ХабраКарма",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Позволяет вам отслеживать карму пользователей на habrahabr.ru и geektimes.ru",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [ "js/jquery.min.js", "src/bg/background.js" ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "ХабраКарма",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "storage",
    "https://m.habrahabr.ru/users/*",
    "https://m.geektimes.ru/users/*",
    "https://habrastorage.org/*"
  ]
}